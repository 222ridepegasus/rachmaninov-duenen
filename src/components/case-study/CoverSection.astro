---
export interface Props {
  image: string;
  title: string;
  subtitle?: string;
  alt?: string; // leave empty string if decorative
}

const { image, title, subtitle, alt = "" } = Astro.props;
---

<section class="full-bleed relative">
  <!-- Fixed-height hero area (desktop spec: 752px) -->
  <div class="relative h-[460px] md:h-[520px] lg:h-[600px] xl:h-[680px] 2xl:h-[768px]">
    <img
      src={image as string}
      alt={alt}
      class="absolute inset-0 h-full w-full object-cover"
    />


    <!-- (Optional) subtle gradient to help white text pop; uncomment if needed -->
    <!-- <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/40 via-black/10 to-transparent"></div> -->

    <!-- Overlay text near bottom inside the 1920 / px-12 container -->
    <div class="absolute inset-x-0 bottom-0">
      <div class="container-site pb-12">
        <h1 class="text-white text-6xl md:text-6xl font-bold leading-tight">
          {title}
        </h1>
        {subtitle && (
          <p class="mt-2 text-white/90 font-semibold text-xl">
            {subtitle}
          </p>
        )}
      </div>
    </div>
  </div>
</section>