---
export interface Props {
  href: string;
  title: string;
  cover: string;
  client?: string;
}
const { href, title, cover, client } = Astro.props;
---

<article class="group">
  <a href={href} class="block">
    <div class="aspect-[16/9] overflow-hidden  bg-gray-100 dark:bg-gray-800">
      <img
        src={cover}
        alt={title}
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.08]"
        loading="lazy"
      />
    </div>
    <div class="mt-2">
      <h3 class="text-base font-semibold">{title}</h3>
      {client && <p class="text-sm text-gray-500 dark:text-gray-400">{client}</p>}
    </div>
  </a>
</article>