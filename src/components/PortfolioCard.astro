---
export interface Props {
  href: string;
  title: string;
  cover: string;
  caseSubtitle?: string;
}
const { href, title, cover, caseSubtitle } = Astro.props;
---

<article class="group">
  <a href={href} class="block">
    <div class="aspect-[16/9] overflow-hidden bg-gray-100 dark:bg-gray-800">
      <img
        src={cover}
        alt={title}
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.08]"
        loading="lazy"
      />
    </div>
    <div class="mt-1.5 sm:mt-3 flex flex-col gap-0">
      <h3 class="text-xl font-bold m-0 leading-tight">{title}</h3>
      <p class="text-md font-medium text-gray-500 dark:text-gray-400 m-0">{caseSubtitle}</p>
    </div>
  </a>
</article>